<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Bands</title>
  </head>
  <body>
    <h1>Bands</h1>
    @if(Model.Count == 0)
    {
      <h3>No bands have been added</h3>
    }
    else
    {
      <ul>
        @foreach(var band in Model)
        {
          <li><a href="/bands/@band.GetId()">@band.GetName()</a></li>
        }
      </ul>
    }
    <a href="/">Home</a>
    <a href="/bands/add">Add Band</a>
    <a href="/venues">View Venues</a>
  </body>
</html>
