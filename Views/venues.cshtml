<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Venues</title>
  </head>
  <body>
    <h1>Venues</h1>
    @if(Model.Count == 0)
    {
      <h3>No venues have been added</h3>
    }
    else
    {
      <ul>
        @foreach(var venue in Model)
        {
          <li><a href="/venues/@venue.GetId()">@venue.GetName()</a></li>
        }
      </ul>
    }
    <a href="/">Home</a>
    <a href="/venues/add">Add Venue</a>
    <a href="/bands">View Bands</a>
  </body>
</html>
